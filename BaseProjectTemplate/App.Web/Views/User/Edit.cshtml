@model App.Web.ViewModels.User.UserAddOrEditVM

@{
	ViewData["Title"] = $"Cập nhật tài khoản {Model.Username}";
}

<div class="row">
	<div class="col-md-5">
		<form asp-action="Edit">
			<input asp-for="Id" type="hidden" />
			<input asp-for="Username" type="hidden" />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="Username" class="control-label">Tên đăng nhập</label>
				<input value="@Model.Username" disabled class="form-control" />
			</div>
			<partial name="_AddOrEdit">
			<div class="form-group">
				<button type="submit" class="btn btn-success"><i class="fa fa-save"></i> Lưu</button>
				<button type="reset" class="btn btn-default"><i class="fa fa-undo"></i> Nhập lại</button>
			</div>
		</form>
	</div>
</div>
<partial name="_BackToList" />
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
