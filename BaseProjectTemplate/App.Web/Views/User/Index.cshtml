@model IEnumerable<App.Web.ViewModels.User.UserListItemVM>

@{
	ViewData["Title"] = "Danh sách tài khoản";
	ViewBag.NavBarCodePage = NavBarCodePage.USER_LIST;
}

@if (User.IsInPermission(AuthConst.AppUser.CREATE))
{
<div class="my-2">
	<a asp-action="Create" class="btn btn-primary">
		<i class="mdi mdi-plus"></i> &nbsp; Tạo mới người dùng
	</a>
</div>
}


<div class="table-responsive">
	<table class="table table-bordered table-hover">
		<thead>
			<tr>
				<th>#</th>
				<th>Tài khoản</th>
				<th>Họ tên</th>
				<th>SĐT</th>
				<th>Email</th>
				<th>Vai trò</th>
				<th>Ngày tạo</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in Model)
			{
			<tr>
				<td class="fit">@item.RowIndex</td>
				<td>@item.Username</td>
				<td>@item.FullName</td>
				<td>@item.PhoneNumber1</td>
				<td>@item.Email</td>
				<td>@item.RoleName</td>
				<td>@item.CreatedDate.ToDMY()</td>
				<td class="fit">
					<a asp-action="Details" asp-route-id="@item.Id"
						class="btn btn-outline-secondary btn-sm"><i class="mdi mdi-eye"></i></a>
					@if (User.IsInPermission(AuthConst.AppUser.UPDATE))
					{
						<a asp-action="Edit" asp-route-id="@item.Id" title="Edit"
							class="btn btn-outline-secondary btn-sm"><i class="mdi mdi-pencil"></i></a>
					}
					@if (User.IsInPermission(AuthConst.AppUser.DELETE))
					{
						<a asp-action="Delete" asp-route-id="@item.Id"
							class="btn btn-outline-danger btn-sm js-delete-confirm"
							data-msg="Xác nhận xóa tài khoản [@item.Username]?"><i class="mdi mdi-trash-can"></i></a>
					}
				</td>
			</tr>
			}
		</tbody>
	</table>
</div>

<partial name="_Pager" />
